@model LoginViewModel
@using Microsoft.AspNetCore.Http

@inject SignInManager<User> SignInManager

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group-sm row bottom-margin-sm">
        <label class="col-md-3 control-label">Email</label>
        <div class="col-md-9">
            <input asp-for="Email" class="form-control input-width-md" spellcheck="false" placeholder="Email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group-sm row bottom-margin-sm">
        <label class="col-md-3 control-label">Password</label>
        <div class="col-md-9">
            <input asp-for="Password" class="form-control input-width-md" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group-sm row bottom-margin-sm">
        <div class="col-md-offset-3 col-md-9">
            <div class="checkbox">                
                <label><input asp-for="RememberMe" checked="checked" />Remember me?</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-3 col-md-3">
            <button type="submit" class="btn btn-standard">Log in</button>
        </div>
        <div class="col-md-6">
            <p><a asp-action="ForgotPassword">Forgot your password?</a></p>
        </div>
    </div>


</form>
