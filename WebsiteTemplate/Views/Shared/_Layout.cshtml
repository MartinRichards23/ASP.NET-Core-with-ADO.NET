<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WebsiteTemplate</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="apple-touch-icon" href="~/apple-touch-icon.png">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="WebsiteTemplate description" />

    <meta property="og:site_name" content="WebsiteTemplate" />
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="WebsiteTemplate description" />
    <meta property="og:url" content="https://WebsiteTemplate.com">
    <meta property="og:image" content="https://WebsiteTemplate.com/images/logo.png">
    
    <environment names="Development">
        <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link asp-append-version="true" rel="stylesheet" href="~/css/site.css" />
        <script asp-append-version="true" src="~/js/bundle.js" async></script>
    </environment>
    <environment names="Staging,Production">
        <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link asp-append-version="true" rel="stylesheet" href="~/css/bundle.min.css" />
        <script asp-append-version="true" src="~/js/bundle.min.js" async></script>
    </environment>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>

                <a class="btn navbar-btn btn-standard" asp-area="" asp-controller="Home" asp-action="Index" style="padding:6px;">
                    <img src="~/images/logo_28.png" asp-append-version="true" class="image-logo-lg" alt="WebsiteTemplate description" />
                </a>
            </div>


            @await Html.PartialAsync("_LoginPartial")

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="navbar footer my-footer theme-grey">
        <div class="container">
            <div class="navbar-left">
                <a class="btn btn-grey" href="~/">WebsiteTemplate ©</a>
            </div>
            <div class="navbar-right">
                <div class="btn-group">
                    <a class="btn btn-grey navbar-btn" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    <a class="btn btn-grey navbar-btn" asp-area="" asp-controller="Home" asp-action="TermsOfService">Terms</a>
                    <a class="btn btn-grey navbar-btn" asp-area="" asp-controller="Home" asp-action="PrivacyStatement">Privacy</a>
                </div>
            </div>
        </div>
    </footer>

    <div class="side-panel visible-lg">
        <a class="btn btn-standard btn-wide-md top-margin-sm" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
    </div>

    <environment names="Development">
        <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap-dialog/dist/css/bootstrap-dialog.css" />

        <script asp-append-version="true" src="~/lib/jquery/dist/jquery.js"></script>
        <script asp-append-version="true" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-dialog/dist/js/bootstrap-dialog.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap-dialog/dist/css/bootstrap-dialog.min.css" />

        <script asp-append-version="true" src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js" asp-fallback-src="~/lib/jquery/dist/jquery.min.js" asp-fallback-test="window.jQuery"></script>
        <script asp-append-version="true" src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js" asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
        <script asp-append-version="true" src="~/lib/bootstrap-dialog/dist/js/bootstrap-dialog.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-90235329-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>