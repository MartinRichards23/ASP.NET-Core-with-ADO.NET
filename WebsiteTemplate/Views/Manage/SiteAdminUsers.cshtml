@model SiteAdminUsersModel

@{
    ViewBag.Title = "Site admin";
}

<style>
    .box-height {
        min-height: 250px;
    }
</style>

<div class="page-title-container">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>

<div class="row row-flex">

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="large-panel-title">Orders</h3>
            </div>

            <table class="table table-striped table-hover table-condensed">
                <colgroup>
                    <col span="1" style="width:100px;">
                    <col span="1" style="width:300px;">
                    <col span="1" style="width:auto;">

                    <col span="1" style="width:60px; text-align:right;">
                    <col span="1" style="width:60px; text-align:right;">
                    <col span="1" style="width:60px; text-align:right;">
                    <col span="1" style="width:60px; text-align:right;">
                </colgroup>

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Time</th>
                        <th>Logins</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (UserInfo info in Model.UserInfo)
                    {
                        <tr>
                            <td>
                                <span>@info.User.Id</span>
                            </td>
                            <td>
                                <span>@info.User.Email</span>
                            </td>
                            <td>
                                <span>@DateTimeExtensions.ToStringFriendly(@info.User.Timestamp, ViewBag.TimeZone)</span>
                            </td>
                            <td>
                                <span>@info.LoginCount</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>


</div>